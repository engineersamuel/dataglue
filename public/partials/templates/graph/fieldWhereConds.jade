                | &nbsp;
                i.icon-info-sign(tooltip="{{o.tooltip}}")
            | &nbsp;End Date

div(ng-if="_.contains(['int', 'float', 'decimal', 'number'], dataSet.dbReferences[dbRefIndex].fields[fieldIndex].DATA_TYPE)")
    div.form-inline
        div.form-group
            label {{ dataSet.dbReferences[dbRefIndex].fields[fieldIndex].COLUMN_NAME }}&nbsp;
            select(ng-model="dataSet.dbReferences[dbRefIndex].fields[fieldIndex].cond", ng-options="x.value as x.label for x in whereConds")
                option(value="")
        div.form-group
            | &nbsp;
            input.form-control(type="number", placeholder="Enter a number", ng-model="dataSet.dbReferences[dbRefIndex].fields[fieldIndex].condValue", ng-disabled="dataSet.dbReferences[dbRefIndex].fields[fieldIndex].cond === null")

